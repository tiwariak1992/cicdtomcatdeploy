pipeline
{
    agent any
    stages
    {
      stage
          { 
            steps('deply to tomcat')
            {
             sshagent('cicdtomcat')
              {
                sh 'scp -o StrictHostKeyChecking=no **/*.war ec2-user@3.0.52.153:/usr/share/tomcat/webappp/'
              }
           }
         }
    }
}
