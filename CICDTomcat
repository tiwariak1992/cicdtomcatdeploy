pipeline
{
    agent any
    stages
    {
      stage('deploy to tomcat')
          { 
            steps
            {
             sshagent(['cicdtomcat'])
              {
                sh 'scp -o StrictHostKeyChecking=no /webapp ec2-user@18.139.3.255:/var/lib/tomcat/webapps'
              }
           }
         }
    }
}
