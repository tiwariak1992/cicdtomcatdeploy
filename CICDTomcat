pipeline
{
    agent any
    stages
    {
      stage('deploy to tomcat')
          { 
            steps
            {
             sshagent(['cicd'])
              {
                sh 'scp -o StrictHostKeyChecking=no **/*.war ec2-user@18.139.3.255:/usr/share/tomcat/webapps'
              }
           }
         }
    }
}
